<!DOCTYPE html>
<html>
  <head>
    <meta charset = "UTF-8">
    <title>Yourtask</title>
    
      <%= csrf_meta_tags %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <header> 
    
      <nav class="navbar navbar-default navbar-fixed-top">
      	<div class="container-fluid">
		      <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
				      <span class="sr-only">Toggle navigation</span>
			      	<span class="<icon-ba></icon-ba>r"></span>
		      		<span class="icon-bar"></span>
			      	<span class="icon-bar"></span>
			      </button>
			      <div class="navbar-brand"><%=link_to "YourTask", tasks_path %></div>
      		</div>
		
	    <div id="gnavi" class="collapse navbar-collapse">
		  	<ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to "タスク依頼", new_task_path %></li>
            
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <li><%= link_to 'マイページ', edit_user_registration_path %></li>
          <% else %>
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
          
          <% end %>
        </ul>
			
			<p class="navbar-text navbar-right">ようこそ
			    <% if user_signed_in? %>
  			      <class="navbar-link"><%= current_user.name %></a>さん</p>
  			     <% else %>
  			      <class="navbar-link"><font color="#ffffff>ゲスト</font></a>さん</p>
          <% end %>
	  	  </div>
	    </div>
    </nav>
    

   </header>  
    
    
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
     
    <%= yield %>

  </body>
</html>
